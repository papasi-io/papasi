	<!--begin::Header menu toggle-->
	<div class="app-navbar-item d-lg-none ms-2 me-n3" title="Show header menu">
		<div class="btn btn-icon btn-active-color-primary w-35px h-35px" id="swap_app_header_menu_toggle">@((MarkupString)Theme.getSvgIcon("duotune/text/txt001.svg", "svg-icon svg-icon-1"))</div>
