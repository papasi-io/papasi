@using Microsoft.AspNetCore.Components.Web
@using Papasi.Theme;
@using Papasi.Theme.libs

@namespace Papasi.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject IBootstrapBase BootstrapBase
@inject ITheme Theme

@{
	BootstrapBase.init(Theme);
}

<!DOCTYPE html>
<html @Html.Raw(Theme.printHtmlAttributes("html"))>
<!--begin::Head-->

<head>
	<base href="~/" />
	<meta charset="utf-8" />
	<meta name="description" content="" />
	<meta name="keywords" content="" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="apple-touch-icon" sizes="180x180" href="/assets/media/favicon/apple-touch-icon.png"/>
	<link rel="icon" type="image/png" sizes="32x32" href="/assets/media/favicon/favicon-32x32.png"/>
	<link rel="icon" type="image/png" sizes="192x192" href="/assets/media/favicon/android-chrome-192x192.png"/>
	<link rel="icon" type="image/png" sizes="16x16" href="/assets/media/favicon/favicon-16x16.png"/>
	<link rel="manifest" href="/assets/media/favicon/site.webmanifest"/>
	<link rel="mask-icon" href="/assets/media/favicon/safari-pinned-tab.svg" color="#5bbad5"/>
	<meta name="msapplication-TileColor" content="#da532c"/>
	<meta name="msapplication-TileImage" content="/assets/media/favicon/mstile-144x144.png"/>
	<meta name="theme-color" content="#6600ff"/>
   
	<link href="~/assets/css/custom.css" rel="stylesheet" />
	
	<link rel="shortcut icon" href="@Theme.getFavicon()" />

	<!--begin::Fonts-->
	@foreach (string font in Theme.getFonts())
	{
		<link rel="stylesheet" href="@font" />
	}
	<!--end::Fonts-->
	<!--begin::Global Stylesheets(mandatory)-->
	@foreach (string file in Theme.getGlobalAssets("Css"))
	{
		<link rel="stylesheet" type="text/css" href="@file" />
	}
	<!--end::Global Stylesheets-->
</head>
<!--end::Head-->
<!--begin::Body-->
<!body @Html.Raw(Theme.printHtmlAttributes("body")) class='@Theme.printHtmlClasses("body")'>
<partial name="~/Shared/Partials/ThemeMode/_Init.cshtml"></partial>

<!--begin::Global Javascript(mandatory)-->
	@foreach (string file in Theme.getGlobalAssets("Js"))
	{
	<script src="@file"></script>
	}
<!--end::Global Javascript-->

<partial name="~/Shared/Partials/_PageLoader.cshtml"></partial>

	@RenderBody()

<script src="_framework/blazor.server.js"></script>
</!body>
<!--end::Body-->

</html>
